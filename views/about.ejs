        <embed src="/images/Araya's Resume.pdf" type="application/pdf" width="100%" height="683px" />
    </div>
    <img class="pic1" src="/images/code2.jpeg">
    <img class="pic2" src="/images/code1.png">
    <img class="pic3" src="/images/code3.webp">
    <script defer>
        const resumeContent = document.getElementById('resumeContent');
        const toggleResumeButton = document.getElementById('toggleResumeButton');

        // Function to toggle the visibility of the resume content and images
        function toggleResumeVisibility() {
            // Toggle visibility of the resume content
            if (resumeContent.style.display === 'none' || resumeContent.style.display === '') {
                resumeContent.style.display = 'block';
                // Hide the picture and statement
                document.querySelector('.picture1').style.display = 'none';
                document.querySelector('.name').style.display = 'none';
                document.querySelector('.des').style.display = 'none';
                document.querySelector('.pic1').style.display = 'none';
                document.querySelector('.pic2').style.display = 'none';
                document.querySelector('.pic3').style.display = 'none';
            } else {
                resumeContent.style.display = 'none';
                // Show the picture and statement
                document.querySelector('.picture1').style.display = 'block';
                document.querySelector('.name').style.display = 'block';
                document.querySelector('.des').style.display = 'block';
                document.querySelector('.pic1').style.display = 'block';
                document.querySelector('.pic2').style.display = 'block';
                document.querySelector('.pic3').style.display = 'block';
            }
        }

        // Add a click event listener to the toggle button
        toggleResumeButton.addEventListener('click', toggleResumeVisibility);
    </script>

</body>
